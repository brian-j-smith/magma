citHeader("To cite magma in publications use:")
citEntry(entry="misc",
  title = "R package magma: Matrix Algebra on GPU and Multicore Architectures, Version 0.2.2",
  author = personList(person("Brian", "Smith", "J.", "brian-j-smith@uiowa.edu")),
  year = "September 3, 2010",
  note = "[On-line] http://cran.r-project.org/package=magma",
  textVersion = paste("Smith, B.J. (September 3, 2010)",
    "R package magma: Matrix Algebra on GPU and Multicore Architectures, Version 0.2.2,",
    "[On-line] http://cran.r-project.org/package=magma")
)
